<h2>Definition: <%= @definition.term %></h2>
<h3>Word: <%= @definition.word.term %></h3>

<form action="/words_homepage/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="term">Add a different definition to your word:</label>
  <input id="term" name="term" type="text">

  <button type="submit">Create new definition</button>
</form>

<form action="/words_homepage/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Remove a Definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to your word-"<%= @definition.word.term %>"</a>