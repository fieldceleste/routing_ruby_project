<h1>Learn New Words</h1>

<h3>Please Submit a word here:</h3>

<form action="/words_homepage">
  <div class="form-group">
    <label for="search" >Search!</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<% if @words.any? %>
  <ul>
    <% @words.each do |word| %>
      <li><a href="/words_homepage/<%= word.id %>"><%= word.term %></a></li>
    <% end %>
  </ul>
<% else %> 
  <p>Please enter in a word in the text box..</p>
<% end %>
<a href="/words_homepage/new">Add a new Word!</a>


